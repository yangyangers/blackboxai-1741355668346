<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Villa Vista</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <!-- Logo on the left -->
            <a class="navbar-brand d-flex align-items-center" href="#">
                <img src="@Url.Content("~/images/logo.png")" alt="Villa Vista" height="50" class="me-1" />
                <span class="fw-bold text-dark">Villa Vista</span>
            </a>

            <!-- Toggler button for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <div class="mx-auto">
                    <!-- Center the navbar items -->
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" href="/Home">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Facilities">Facilities</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Services">Services</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/VirtualTour">Virtual Tour</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Contact">Contact</a></li>
                    </ul>
                </div>

                <!-- Login button on the right -->
                <div class="d-flex">
                    <a class="nav-link btn btn-outline-dark me-2" href="/Account/Login">Login</a>
                    <a class="nav-link btn btn-success" href="/Account/Register">Sign Up</a>
                </div>
            </div>
        </div>
    </nav>

    <style>
        body {
            background: url('/images/Main.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Times New Roman', Times, serif;
        }

        .content {
            position: relative;
            z-index: 2;
            color: white;
            text-align: center;
            margin-top: 15%;
        }

        .navbar {
            background-color: rgba(255, 255, 255, 0.9);
        }

        .nav-link {
            color: #333 !important;
        }

            .nav-link.btn {
                background-color: #22333B !important;
                color: white !important;
                border-radius: 5px;
                padding: 5px 15px;
            }

                .nav-link.btn:hover {
                    background-color: #D4A373 !important;
                }
    </style>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <footer class="text-center py-3" style="background-color: #DCE2C8;">
        <p>© 2022 Homeowner's Subdivision | <a href="#">Terms of Use</a> | <a href="#">Privacy Policy</a></p>
    </footer>
</body>
</html>
