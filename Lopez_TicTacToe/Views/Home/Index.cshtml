@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Villa Vista</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .hero {
            position: relative;
            background: url('/images/main.png') center/cover no-repeat;
            height: 100vh; /* Full screen height */
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
        }

        .hero::before {
            content: "";
            position: fixed;
            top: auto;
            left: 0;
            width: auto;
            height: auto;
            background: rgba(0, 0, 0, 0.5); /* Dark overlay */
            z-index: 1;
        }

        .hero-text,
        .hero-subtext {
            position: relative;
            z-index: 2;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            padding: 20px;
            background: rgba(0, 0, 0, 0.6); /* Semi-transparent black background */
            border-radius: 10px; /* Rounded corners */
        }

        .hero-content h1, .hero-content p {
            color: white;
        }
    </style>
</head>
<body>
    <!-- Hero Section (Background Image + Overlay) -->
    <div class="hero">
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-text">Your Home, Your Hub - Everything You Need in One Place!</h1>
                <a href="/Account/Register" class="btn btn-light mt-3 px-4 py-2">Get Started</a>
            </div>
        </div>
    </div>
</body>
</html>
